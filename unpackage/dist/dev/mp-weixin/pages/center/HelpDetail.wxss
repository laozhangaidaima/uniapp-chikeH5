.HelpCenter {
  width: 100%;
  height: 100%;
}
.HelpCenter .call {
  font-size: 20px;
}
.HelpCenter .title {
  width: 80%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.HelpCenter .body {
  width: 100%;
  height: 100%;
  background: #f8f8f8;
  overflow: auto;
}
.HelpCenter .body .list {
  padding-left: 15px;
  background: #fff;
}
.HelpCenter .body .list ._li {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  height: 50px;
  border-bottom: 0.5px solid #e5e5e5;
  font-size: 14px;
  color: #111;
  padding-right: 15px;
}
.HelpCenter .body .list ._li ._p {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  padding-right: 10px;
}
.HelpCenter .body .list ._li ._i {
  font-size: 14px;
  font-weight: 600;
}
.HelpCenter .body .content {
  padding: 18px 15px;
  min-height: 100%;
  background: #fff;
}
.HelpCenter .body .content .text {
  font-size: 14px;
  color: #111;
  line-height: 20px;
}
.HelpCenter .body .content .imgs {
  text-align: center;
  padding: 32px 65px 0;
}
.HelpCenter .body .content .imgs ._img {
  width: 100%;
  margin-bottom: 28px;
}

